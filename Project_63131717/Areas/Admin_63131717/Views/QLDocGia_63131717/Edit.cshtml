@model Project_63131717.Models.DocGia

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin_63131717/Views/Shared/PageAdmin.cshtml";
}
<style>
    body{
        background: #f5e7e7
    }
    a{
        text-decoration:none
    }
    /* Định dạng tổng thể cho form */
    .form-horizontal {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* Định dạng cho tiêu đề */
    h4 {
        text-align: center;
        font-weight:700;
    }

    /* Định dạng cho nhãn và input */
    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    /* Định dạng cho nút Lưu */
    .submit  input[type="submit"],.submit a  {
        background-color: #3498db;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
    }

    input[type="submit"]:hover, .submit a:hover {
        background-color: #2575b7;
    }
    
    /* Định dạng cho thông báo lỗi */
    .text-danger {
        color: #ff6347;
    }
    input{
        margin-top:10px
    }
</style>


@using (Html.BeginForm())
